[alias]
	s = status
	c = checkout
	cam = commit -a -m
	cm = commit -m
	b = branch
	br = branch -r
    pl = pull
    cld = clone --depth
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ai) %C(bold blue)<%an>%Creset' --abbrev-commit
	lgs = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ai) %C(bold blue)<%an>%Creset' --abbrev-commit --stat
	lgn = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ai) %C(bold blue)<%an>%Creset' --abbrev-commit -n
	lgns = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ai) %C(bold blue)<%an>%Creset' --abbrev-commit --stat -n
    smf = submodule foreach
	r = remote -v
    d = diff
    dt = icdiff
    dv = difftool
[user]
[core]
	quotepath = false
[icdiff]
   options = --highlight --line-numbers
[diff]
	tool = vimdiff
[difftool]
	prompt = No
